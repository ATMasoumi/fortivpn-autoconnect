#!/bin/bash

# FortiVPN Auto-Connect - Short Alias
# This is a convenience wrapper for fortivpn-autoconnect

# Determine script directory
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Check if we're running from Homebrew installation
if [[ "$SCRIPT_DIR" =~ /usr/local/bin ]] || [[ "$SCRIPT_DIR" =~ /opt/homebrew/bin ]]; then
    # Homebrew installation - call the main script
    exec "$SCRIPT_DIR/fortivpn-autoconnect" "$@"
else
    # Development or manual installation - call the script in same directory
    exec "$SCRIPT_DIR/forti_connect.sh" "$@"
fi
